{
  "name": "@usemite/mite-sdk",
  "version": "0.0.8",
  "description": "Mite SDK",
  "main": "./lib/module/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf lib && bun typecheck && bob build",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf lib",
    "release": "release-it"
  },
  "keywords": [
    "react-native"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitefix/mite-sdk.git"
  },
  "author": "Henry Paulino <me@henrypl.com> (https://github.com/corasan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mitefix/mite-sdk/issues"
  },
  "homepage": "https://github.com/mitefix/mite-sdk#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "peerDependencies": {
    "expo-constants": "*",
    "expo-device": "*",
    "react": "*",
    "react-native": "*"
  },
  "dependencies": {
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^19.0.4"
  },
  "release-it": {
    "npm": {
      "publish": true,
      "skipVersion": true
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "hooks": {
      "before:release": "bun run build"
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "fix",
              "section": "üêû Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "perf",
              "section": "üèéÔ∏è Performance Improvements"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      "typescript"
    ]
  }
}
