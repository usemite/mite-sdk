{
  "name": "@usemite/mite-sdk",
  "version": "0.0.1",
  "description": "Mite SDK",
  "main": "./lib/module/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "react-native.config.js",
    "lib",
    "android/build.gradle",
    "android/gradle.properties",
    "android/CMakeLists.txt",
    "android/src",
    "ios/**/*.h",
    "ios/**/*.m",
    "ios/**/*.mm",
    "ios/**/*.cpp",
    "ios/**/*.swift",
    "app.plugin.js",
    "*.podspec",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf lib && bun typecheck && bob build",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf android/build node_modules/**/android/build lib android/.cxx node_modules/**/android/.cxx",
    "release": "release-it",
    "specs": "bun typecheck && nitrogen --logLevel=\\\"debug\\\" && bun run build",
    "specs:pod": "bun specs && bun --cwd ../example pod"
  },
  "keywords": [
    "react-native",
    "nitro"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitefix/mite-sdk.git"
  },
  "author": "Henry Paulino <me@henrypl.com> (https://github.com/corasan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mitefix/mite-sdk/issues"
  },
  "homepage": "https://github.com/mitefix/mite-sdk#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "peerDependencies": {
    "expo-constants": "*",
    "expo-device": "*",
    "expo-sqlite": "*",
    "expo-image-picker": "*",
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "*"
  },
  "dependencies": {
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^19.0.4"
  },
  "release-it": {
    "npm": {
      "publish": true,
      "skipVersion": true
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "hooks": {
      "after:bump": "bun specs",
      "before:release": "bun run build"
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "fix",
              "section": "üêû Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "perf",
              "section": "üèéÔ∏è Performance Improvements"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      "typescript"
    ]
  }
}
